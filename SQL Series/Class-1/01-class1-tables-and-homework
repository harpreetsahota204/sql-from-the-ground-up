-- car table

CREATE TABLE IF NOT EXISTS "cat" (
    "id" INT,
    "name" TEXT,
    "breed" TEXT,
    "coloration" TEXT,
    "age" INT,
    "sex" TEXT,
    "fav_toy" TEXT
);
